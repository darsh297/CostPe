<div class="alert-container" style="text-align: right;">
  <% if notice %>
    <p id="notice-alert" class="alert alert-success custom-alert" style="background-color: white; color: black; display: inline-block; max-width: 300px; width: auto; box-shadow: -5px 10px 10px rgba(0, 0, 0, 0.1); border: none;">
      <%= notice %>
      <span class="remove-alert" onclick="removeAlert('notice-alert')">&times;</span>
    </p>
  <% end %>
  <% if alert %>
    <p id="alert-alert" class="alert alert-danger custom-alert" style="background-color: white; color: black; display: inline-block; max-width: 300px; width: auto; box-shadow: -5px 10px  10px rgba(0, 0, 0, 0.1); border: none;">
      <%= alert %>
      <span class="remove-alert" onclick="removeAlert('alert-alert')">&times;</span>
    </p>
  <% end %>
</div>





<script>
  function removeAlert(alertId) {
    var alertElement = document.getElementById(alertId);
    if (alertElement) {
      alertElement.remove();
    }
  }
</script>

